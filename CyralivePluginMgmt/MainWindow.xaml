<Window x:Class="CyralivePluginMgmt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyralivePluginMgmt"
        mc:Ignorable="d"
        Title="插件管理" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="所有插件："/>
        <ListView x:Name="plugin_list" Grid.Row="1" Margin="2,2,2,0" Height="300"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="del_plugin" Content="删除插件" Click="del_plugin_Click" HorizontalAlignment="Center"/>
            <Button x:Name="install_oc_plugin" Grid.Column="1" Content="安装插件" Click="install_oc_plugin_Click" HorizontalAlignment="Center"/>
            <Button x:Name="close_plugin_mgmt" Grid.Column="2" Content="关闭" Click="close_plugin_mgmt_Click" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
